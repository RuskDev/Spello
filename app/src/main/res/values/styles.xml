<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="letterSpace" parent="android:Widget.TextView">
        <item name="android:background">@color/unselectedLetter</item>
        <item name="android:layout_width">@dimen/letterHeight</item>
        <item name="android:layout_height">@dimen/letterHeight</item>
        <item name="android:textSize">@dimen/letterFontSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/letterMargin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="popUpMenuButton" parent="android:Widget.Button">
        <item name="backgroundTint">@color/menuButtonBackground</item>
        <item name="android:layout_width">@dimen/keyWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menuFont</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="backButton" parent="android:Widget.Button">
        <item name="backgroundTint">@color/activeButtonCol</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="keyButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/keyFontSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/activeButtonCol</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/keyWidth</item>

    </style>


    
</resources>