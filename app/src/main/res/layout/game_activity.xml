<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/WelcomeGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the game screen, this will be a game soon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="354dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/qKey"
                android:layout_width="@dimen/keyWidth"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/activeButtonCol"
                android:paddingLeft="@dimen/keyPad"
                android:paddingRight="@dimen/keyPad"
                android:text="@string/q"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeGame" />
</androidx.constraintlayout.widget.ConstraintLayout>